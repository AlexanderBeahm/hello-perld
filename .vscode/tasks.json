{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Setup Claude CLI",
            "type": "shell",
            "command": "sudo",
            "args": ["-u", "vscode", "-i", "bash", "./.devcontainer/setup-claude.sh"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "detail": "Manually setup Claude CLI if automatic setup failed"
        },
        {
            "label": "Test Claude CLI",
            "type": "shell",
            "command": "sudo",
            "args": ["-u", "vscode", "bash", "./.devcontainer/test-claude.sh"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "detail": "Run comprehensive test of Claude CLI installation and configuration"
        },
        {
            "label": "Quick Claude Version Check",
            "type": "shell",
            "command": "sudo",
            "args": ["-u", "vscode", "-i", "bash", "-c", "claude --version || ~/.npm-global/bin/claude --version"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "detail": "Quick test if Claude CLI version command works"
        }
    ]
}