// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/debian
{
	"name": "Debian",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/base:bullseye",
	"features": {
		"ghcr.io/devcontainers/features/git:1": {},
		"ghcr.io/devcontainers/features/github-cli:1": {},
		"ghcr.io/itsmechlark/features/postgresql:1": {},
		"ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
		"ghcr.io/devcontainers/features/node:1": {
			"version": "lts"
		}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"bscan.perlnavigator",
				"anthropic.claude-code",
				"Vue.volar",
				"Vue.vscode-typescript-vue-plugin",
				"dbaeumer.vscode-eslint"
			]
		}
	},
	// Forward the WSL2 ssh-agent socket into the container:
	"mounts": [
		"source=${localEnv:HOME}/.ssh/agent.sock,target=/ssh-agent,type=bind"
	],
	"containerEnv": {
		"SSH_AUTH_SOCK": "/ssh-agent",
		// Accept GitHub's host key on first connect (modern OpenSSH hashes known_hosts):
		"GIT_SSH_COMMAND": "ssh -o StrictHostKeyChecking=accept-new"
	},
	"runArgs": ["--env-file", ".env"],
	"remoteEnv": {
		"SSH_AUTH_SOCK": "/ssh-agent"
	},
	"postCreateCommand": "sudo ./.devcontainer/postcreate.sh",
	"postStartCommand": "sudo ./.devcontainer/poststart.sh",
	"remoteUser": "vscode"
}